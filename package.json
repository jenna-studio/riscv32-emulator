{
    "name": "rv32emulator-ide",
    "version": "1.0.0",
    "description": "RISC-V 32-bit Emulator IDE with Monaco Editor and xterm.js",
    "author": "Your Name",
    "private": true,
    "main": "main.js",
    "type": "module",
    "scripts": {
        "start": "electron .",
        "build-emu": "make",
        "dev": "electron . --enable-logging",
        "prebuild": "npm run build-emu",
        "build": "electron-builder --dir",
        "build:mac": "npm run prebuild && electron-builder --mac --dir",
        "build:win": "npm run prebuild && electron-builder --win",
        "build:linux": "npm run prebuild && electron-builder --linux",
        "dist": "npm run build",
        "pack": "npm run prebuild && electron-builder --dir",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.kmu.rv32emulator-ide",
        "productName": "RISC-V Emulator IDE",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!dist/**/*",
            "!node_modules/**/*",
            "node_modules/monaco-editor/**/*",
            "node_modules/@xterm/**/*"
        ],
        "asarUnpack": [
            "obj/**/*"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    },
    "devDependencies": {
        "electron": "^32.0.0",
        "electron-builder": "^25.1.8"
    },
    "dependencies": {
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/xterm": "^5.5.0",
        "monaco-editor": "^0.50.0"
    }
}
